
---

import Layout from '../layouts/Layout.astro'

import QRScanner from '../components/QRScanner'

import ScanHistory from '../components/ScanHistory'

---

<Layout title="QR Scanner">

  <main class="container mx-auto p-4">

    <div class="text-center mb-8">

      <h1 class="text-4xl font-bold mb-2">QR Scanner</h1>

      <p class="text-gray-600">Scan QR codes and view your scan history</p>

    </div>

    

    <div class="grid md:grid-cols-2 gap-8">

      <div class="card bg-base-100 shadow-xl">

        <div class="card-body">

          <h2 class="card-title">Scanner</h2>

          <QRScanner client:load />

        </div>

      </div>

      

      <div class="card bg-base-100 shadow-xl">

        <div class="card-body">

          <h2 class="card-title">Scan History</h2>

          <ScanHistory client:load />

        </div>

      </div>

    </div>

  </main>

</Layout>